{
  "name": "redbyte",
  "main": "index.js",
  "version": "0.1.2",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --publish never"
  },
  "keywords": [],
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0"
  },
  "build": {
    "appId": "com.redbyte.client",
    "productName": "RedByte",
    "win": {
      "target": "nsis",
      "artifactName": "redbyte-installer.${ext}",
      "icon": "assets/icon.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "galshichrur",
        "repo": "redbyte"
      }
    ],
    "extraResources": [
      {
        "from": "../backend/cmake-build-debug/bin/agent.exe",
        "to": "backend/agent.exe"
      }
    ]
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "electron-updater": "^6.7.3"
  }
}
